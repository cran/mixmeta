 	author = personList(as.person("F. Sera"),as.person("A. Gasparrini")),
	title = "An extended mixed-effects framework for meta-analysis",
 	journal = "Statistics in Medicine",
	volume = "",
	number = "",
	pages= "In submission",
	year = "2019",
	textVersion = 
	  paste("Sera F., Gasparrini A. (2019).",
	    "An extended mixed-effects framework for meta-analysis.",
      "Statistics in Medicine. In submission.",
      "URL "),
    header = "To cite the R package 'mixmeta' in publications use:",
    footer = "A BibTeX entry for LaTeX users is returned by: toBibtex(citation('mixmeta'))"
)
